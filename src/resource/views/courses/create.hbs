<div class="mt-4">
    <h3>Đăng ký</h3>

    <form method="POST" action="/introduce/store">  
        <div class="form-group">
            <label for="name">Tên </label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập mô tả">
        </div>

        <div class="form-group">
            <label for="descriptionn">Mô tả</label>
            <input type="text" class="form-control" id="descriptionn" name="descriptionn" placeholder="Nhập mô tả">
        </div>

        <div class="form-group">
            <label for="video">Video Id</label>
            <input type="text" class="form-control" id="video" name="video" placeholder="Nhập mô tả">
        </div>

        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Nhập mô tả">
        </div>
        
        <button type="submit" class="btn btn-primary">Thêm đăng ký</button>
    </form>

</div>